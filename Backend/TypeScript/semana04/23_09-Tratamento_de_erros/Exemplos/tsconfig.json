{
  "compilerOptions": {
    "target": "ES2018",
    "lib": [
      "ES2018"
    ],
    "module": "commonjs",
    "moduleResolution": "node",
    "typeRoots": [
      "./src/@types"
    ],
    "resolveJsonModule": true,
    "allowJs": true,
    "outDir": "./dist",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "noImplicitAny": true,
    "skipLibCheck": true
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}